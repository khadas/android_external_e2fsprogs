//
// Common definitions.
//

cc_defaults {
    name: "libicuuc_system_defaults",
    srcs: [
        "*.cpp",
    ],

    // We deliberately do not set -DICU_DATA_DIR: ICU4C is configured on Android
    // using udata_setCommonData.
    cflags: [
        "-D_REENTRANT",
        "-DU_COMMON_IMPLEMENTATION",

        "-O3",
        "-fvisibility=hidden",

        "-Wall",
        "-Werror",
        "-Wno-unused-parameter",
        "-Wno-missing-field-initializers",
        "-Wno-sign-compare",
        "-Wno-deprecated-declarations",
        "-Wno-ignored-attributes",
    ],

    cppflags: [
        "-std=c++11",
    ],

    export_include_dirs: ["."],
    rtti: true,

    required: ["icu-data_host_i18n_apex"],

    target: {
        android: {
            cflags: [
                "-DPIC",
                "-fPIC",
            ],
        },
    },
}

//
// Build for the host and target.
//
cc_library {
    name: "libicuuc_system",
    host_supported: true,
    unique_host_soname: true,
    defaults: ["libicuuc_system_defaults"],
    static_libs: ["libicuuc_system_stubdata"],
}
